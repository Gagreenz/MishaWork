@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MishaWork.Models.UserSubject
<head>
    <link href="~/css/CheckWork.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <a asp-action = "AddWorkToStudent" asp-controller = "Teacher" asp-route-user ="@Model" >Добавить работу</a>    
    @if(Model.Subjects.Count == 0)
    {
        <h1>
            Активных работ нет!
        </h1>
    }
    else
    {
        <table border = "1">
        @foreach(var subject in Model.Subjects)
        {
            <tr>
                <td><div>@subject.Date.ToUniversalTime().ToString("d")</div></td>
                <td>@subject.Name</td>
                @if(subject.Path != null)
                {
                    <td>
                        <a asp-action = "Download" asp-controller = "Teacher" asp-route-path ="@subject.Path">Загрузить файл</a>
                    </td>  
                } 
            </tr>
        } 
        </table>
    }
</body>