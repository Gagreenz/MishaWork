@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<MishaWork.Models.Subject>

<table border = 1>
    @foreach(var subject in Model)
    {
    <tr>
        <td>
            <div>Название предмета:</div>
            @subject.Name;
                </td>
    </tr>
    <tr>
        <td>
            <div>Комментарий учителя</div>
            @subject.TeacherComment;
            

        </td>
    </tr>
    <tr>
        <td>
           <form asp-action ="LoadFile" asp-controller ="home" asp-route-id = "@subject.Id" >
                <input type="file">
                <input type ="submit">
            </form>
        </td>
    </tr>
}
    
</table>